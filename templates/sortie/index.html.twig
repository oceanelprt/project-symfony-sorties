{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">



            <div class="row justify-content-between">
                <h4 class="col-md-3">Filtrer les sorties</h4>
                <div class="col-md-2">
                    <strong>Date du jour : </strong>{{ "now"|date("d/m/Y") }}
                    <br/>
                    <strong>Organisateur : </strong>{{ app.user.prenom }}
                    <br/>
                </div>
            </div>


        {{ form_start(form, { 'attr': { 'class' : 'form-inline', 'role' : 'form' } }) }}
            <div class="row">
                <div class="col-md-5 mt-4 mx-3">
                    {{ form_row(form.nom) }}
                    <div class="row mb-3">
                        <div class="col-2">
                            {{ form_label(form.ville) }}
                        </div>
                        <div class="col-10">
                            {{ form_widget(form.ville) }}
                        </div>
                    </div>




                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.debut) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.fin) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mt-5 mx-5">
                    {{ form_row(form.isOrganisateur) }}
                    {{ form_row(form.isInscrit) }}
                    {{ form_row(form.isNotInscrit) }}
                    {{ form_row(form.isPassee) }}
                </div>
            </div>
        {{ form_end(form) }}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>Inscrits/Places</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.date ? sortie.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d') : '' }}</td>
                    <td>{{ sortie.nombrePlaces }}</td>
                    <td></td>
                    <td></td>
                    <td>{{ sortie.createur.prenom }} {{ sortie.createur.nom }}</td>
                    <td>
                        <a href="{{ path('sortie_show', {'id': sortie.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}" class="btn btn-primary">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune sortie disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('sortie_new') }}" class="btn btn-primary">Créer une nouvelle sortie</a>
    </div>
{% endblock %}
