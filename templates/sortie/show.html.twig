{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ sortie.date ? sortie.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateCloture</th>
                <td>{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NombrePlaces</th>
                <td>{{ sortie.nombrePlaces }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sortie.description }}</td>
            </tr>
            <tr>
                <th>Créateur</th>
                <td>{{ sortie.createur.pseudo }}</td>
            </tr>
            <tr>
                <th>Participants</th>
                <td>
                    <ul>
                        {% for participant in sortie.participants %}
                            <li>{{ participant.pseudo }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sortie_index') }}">Retour à la liste</a>

    <a href="{{ path('sortie_edit', {'sortie': sortie.id}) }}">editer</a>

    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
