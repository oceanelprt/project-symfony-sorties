{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="justify-content-center">
        <h1>{{ utilisateur.pseudo }}  </h1>
        <br/><br/>
        <div>
            <label for="prenom">Prénom : </label>
            <input type="text" readonly="readonly" name="prenom" id="prenom" class="form-control" value="{{ utilisateur.prenom }}">
        </div>
        <div>
            <label for="nom">Nom : </label>
            <input type="email" readonly="readonly" name="nom" id="nom" class="form-control" value="{{ utilisateur.nom }}">
        </div>
        <div>
            <label for="telephone">Téléphone : </label>
            <input type="text" readonly="readonly" name="tel" id="telephone" class="form-control"  value="{{ utilisateur.telephone }}">
        </div>
        <div>
            <label for="email">Email : </label>
            <input type="text" readonly="readonly" name="email" id="email" class="form-control" value="{{ utilisateur.email }}">
        </div>
        <div>
            <label for="ville">Ville de rattachement : </label>
            <input type="text" readonly="readonly" name="ville-attachement" id="ville" class="form-control" value="{{ utilisateur.ville.nom }}">
        </div>
        <br/>

        <div class="col-4 offset-4">
            <a href="{{ path('sortie_index') }}" class="btn btn-primary col-12">Retour</a>
        </div>
    </div>
</div>
{% endblock %}